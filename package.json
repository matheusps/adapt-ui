{
  "name": "react-quarks",
  "version": "0.0.1",
  "description": "Elementary UI components",
  "main": "index.js",
  "repository": "https://github.com/matheusps/react-quarks.git",
  "author": "matheusps <matheus.ps@icloud.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "check-types": "tsc",
    "test": "jest",
    "test:coverage": "yarn test --collectCoverage",
    "codecov": "yarn test:coverage && codecov -f coverage/*.json",
    "dev": "docz dev",
    "build": "docz build"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "@types/react": "^16.8.12",
    "@types/react-dom": "^16.8.3",
    "@types/styled-components": "^4.1.13",
    "codecov": "^3.3.0",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "jest": "^24.7.1",
    "jest-styled-components": "^6.3.1",
    "react-testing-library": "^6.1.1",
    "ts-jest": "^24.0.1",
    "typescript": "^3.4.1"
  },
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "emotion-theming": "^10.0.10",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "\\.(woff|woff2)$": "<rootDir>/src/__mocks__/fontMock.ts"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
